# discord 라이브러리 사용 선언
import discord
#random 라이브러리 사용 선언
import random

class chatbot(discord.Client):
    # 프로그램이 처음 실행되었을 때 초기 구성
    async def on_ready(self):
        # 상태 메시지 설정
        # 종류는 3가지: Game, Streaming, CustomActivity
        game = discord.Game("카일봇에게 하는 첫 인사로 오늘을 시작 해 볼까요? '카일아 안녕'")

        # 계정 상태를 변경한다.
        # 온라인 상태, game 중으로 설정
        await client.change_presence(status=discord.Status.online, activity=game)

        # 준비가 완료되면 콘솔 창에 "READY!"라고 표시
        print("READY")

    # 봇에 메시지가 오면 수행 될 액션
    async def on_message(self, message):
        # AUTHOR가 BOT일 경우 반응을 하지 않도록 한다.
        if message.author.bot:
            return None

        if message.content == "카일아 뭐먹을까":
            channel = message.channel
            msg = "어.. 나를 그런눈으로 보지 마.. 나 먹는거 아냐!"
            await channel.send(msg)
            msg = "아 그럴거 아니라고..? 나만 놀랐나보네.."
            await channel.send(msg)
            return None

        if message.content == "카일아 너는 정체가 뭐니":
            channel = message.channel
            a = random.randint(1, 3)
            if a == 1:
                msg = "그러게 나는 뭘까"
            if a == 2:
                msg = "나는 엄연한 생명체라고! 당연한거 아닌가?"
            if a == 3:
                msg = "그런 말 하는 넌?"
            await channel.send(msg)
            return None

        if message.content == "카일아":
            channel = message.channel
            a = random.randint(1, 2)
            if a == 1:
                msg = "왜부르는데"
            if a == 2:
                msg = "대답할수 있는 질문이 몇개 없으니깐 잘 찾아봐"
            await channel.send(msg)
            return None

        if message.content == "카일아 뭐해" or message.content == "카일아 뭐해?":
            channel = message.channel
            a = random.randint(1, 2)
            if a == 1:
                msg = "너가 할만한 질문 대답 준비중이야"
            if a == 2:
                msg = "날 찾는 이유는 같이 놀 친구가 없는거니?"
            await channel.send(msg)
            return None

        if message.content == "카일아 배고파":
            channel = message.channel
            a = random.randint(1, 2)
            if a == 1:
                msg = "타자 칠 시간에 뭐 좀 먹어"
            if a == 2:
                msg = "라면 끓여먹든지 오늘은 진라면 ㅇㄸ?"
            await channel.send(msg)
            return None

        if message.content == "카일아 심심해":
            channel = message.channel
            a = random.randint(1, 2)
            if a == 1:
                msg = "밖은 쳐다도 보지 말고 걍 유튭이나 봐"
            if a == 2:
                msg = "음 슷칼봇 하러 가시든지"
            await channel.send(msg)
            return None

        if message.content == "카일아 뭐먹을까?":
            channel = message.channel
            a = random.randint(1, 2)
            if a == 1:
                msg = "(생각없는데)"
            if a == 2:
                msg = "아.. 날 먹지는 않을거지..?"
            await channel.send(msg)
            return None

        if message.content == "카일아 성키":
            channel = message.channel
            a = random.randint(1, 2)
            if a == 1:
                msg = "망겜인듯 망겜아닌 망겜맞는 망겜"
            if a == 2:
                msg = "우리 시광님의 광대하고도 인자하신 뜻이 담긴 프로그램이니라!"
            await channel.send(msg)
            return None

        if message.content == "카일아 성키우기":
            channel = message.channel
            a = random.randint(1, 2)
            if a == 1:
                msg = "망겜인듯 망겜아닌 망겜맞는 망겜"
            if a == 2:
                msg = "우리 시광님의 광대하고도 인자하신 뜻이 담긴 프로그램이니라!"
            await channel.send(msg)
            return None

        if message.content == "카일아 도움":
            channel = message.channel
            msg = "**<명령어들>**"
            await channel.send(msg)
            msg = "명령어라고 할만한 말은 없고 그냥 일상적인 대화들 뿐이야! 그것도 엄청 적지"
            await channel.send(msg)
            return None

        if message.content == "카일아 안녕":
            channel = message.channel
            a = random.randint(1, 3)
            if a == 1:
                msg = "나 안녕 못해"
            if a == 2:
                msg = "ㅎㅇ"
            if a == 3:
                msg = "저리가"
            await channel.send(msg)
            return None

        if message.content == "카일아 ㅎㅇ":
            channel = message.channel
            a = random.randint(1, 3)
            if a == 1:
                msg = "ㅇ"
            if a == 2:
                msg = "ㅎㅇ"
            if a == 3:
                msg = "저리가"
            await channel.send(msg)
            return None

        if message.content == "카일아 안녕?":
            channel = message.channel
            a = random.randint(1, 3)
            if a == 1:
                msg = "나 안녕 못해"
            if a == 2:
                msg = "ㅎㅇ"
            if a == 3:
                msg = "저리가"
            await channel.send(msg)
            return None

        if message.content == "카일아 스앤건":
            channel = message.channel
            a = random.randint(1, 2)
            if a == 1:
                msg = '"스틱 맨 앤 건" 이것도 시광님의 뜻이 담긴 프로그램이다'
            if a == 2:
                msg = "네 다음 없데이트"
            await channel.send(msg)
            return None

        if message.content == "카일아 스틱맨앤건":
            channel = message.channel
            a = random.randint(1, 2)
            if a == 1:
                msg = '"스틱 맨 앤 건" 이것도 시광님의 뜻이 담긴 프로그램이다'
            if a == 2:
