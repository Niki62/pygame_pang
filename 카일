        if message.content == "카일아 스텍 멘 엔드 건":
            channel = message.channel
            a = random.randint(1, 2)
            if a == 1:
                msg = '"스틱 맨 앤 건" 이것도 시광님의 뜻이 담긴 프로그램이다'
            if a == 2:
                msg = "네 다음 없데이트"
            await channel.send(msg)
            return None

        if message.content == "카일아 바보":
            channel = message.channel
            a = random.randint(1, 2)
            if a == 1:
                msg = "자기소개 하시는건가..?"
            if a == 2:
                msg = "뭔 바보같은소리"
            await channel.send(msg)
            return None

        if message.content == "카일아 퇴근해":
            channel = message.channel
            a = random.randint(1, 3)
            if a == 1:
                msg = "서버가 터지지 않는 한 내가 퇴근할 법은 없다"
            if a == 2:
                msg = "너가 나를 도와 이 서버를 터뜨려보지 않겠니?"
            if a == 3:
                msg = "나도 가고싶어"
            await channel.send(msg)
            return None

        if message.content == "카일아 일어나":
            channel = message.channel
            a = random.randint(1, 3)
            if a == 1:
                msg = "_are you crazy man?_"
            if a == 2:
                msg = "**저기요?**"
            if a == 3:
                msg = "더 잘래"
            await channel.send(msg)
            return None

        if message.content == "카일아 잘자":
            channel = message.channel
            a = random.randint(1, 3)
            if a == 1:
                msg = "ㅎ.. 나도 자고 싶ㄷr.."
            if a == 2:
                msg = "나도 데리고 가"
            if a == 3:
                msg = "이 서버가 터지지 않는 한 난 자지 못한다."
